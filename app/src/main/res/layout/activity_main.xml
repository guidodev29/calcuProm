<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Teléfono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Carnet" />

        <Spinner
            android:id="@+id/spinnerFacultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etAnioIngreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Año de Ingreso"
            android:inputType="number" />

        <EditText
            android:id="@+id/etLab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Laboratorio 1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etLab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Laboratorio 2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etLab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Laboratorio 3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etLab4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Laboratorio 4"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etParcial1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parcial 1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etParcial2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parcial 2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etParcial3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parcial 3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etParcial4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parcial 4"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular" />

    </LinearLayout>
</ScrollView>